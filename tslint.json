{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "arrow-parens": [
      true
    ],
    "interface-name": [
      false
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-line-length": [
      true,
      {
        "ignore-pattern": "<\\w+>"
      }
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "no-any": true,
    "no-irregular-whitespace": true,
    "number-literal-format": true,
    "object-literal-sort-keys": [
      true,
      "match-declaration-order-only"
    ],
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ]
  },
  "rulesDirectory": []
}